---
interface Props {
  title?: string;
  subtitle?: string;
  bgColor?: 'white' | 'gray' | 'primary';
  id?: string;
}

const { title, subtitle, bgColor = 'white', id } = Astro.props;

const bgClasses = {
  white: 'bg-white',
  gray: 'bg-gray-50',
  primary: 'bg-primary-50',
};
---

<section id={id} class:list={[bgClasses[bgColor], 'py-16 md:py-24']}>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    {(title || subtitle) && (
      <div class="text-center mb-12">
        {title && (
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{title}</h2>
        )}
        {subtitle && (
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">{subtitle}</p>
        )}
      </div>
    )}
    <slot />
  </div>
</section>
